datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String     @unique
  role     String     @default("USER")
  Giveaway Giveaway[]
}

model Guild {
  id                    String  @unique
  commandInvokeToken    String  @default("!")
  ignoreTheBot          Boolean @default(true)
  pokemonChannelId      String
  giveawayEmojiToken    String  @default("ðŸŽ‰")
  giveawayEmbedColor    String  @default("#0099CC")
}

model Giveaway {
  id        String   @unique
  createdAt DateTime @default(now())
  expiredAt DateTime
  hostedBy  User     @relation(references: [id], fields: [userId])
  winners   Int
  isEnded   Boolean  @default(false)
  userId    String
}
